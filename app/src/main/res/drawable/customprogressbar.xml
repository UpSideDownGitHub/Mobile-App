<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/pastel_blue1_2"
                android:centerColor="@color/pastel_blue2_2"
                android:endColor="@color/pastel_blue3_2"
                android:angle="45" />
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <gradient android:startColor="@color/pastel_blue1"
                    android:centerColor="@color/pastel_blue2"
                    android:endColor="@color/pastel_blue3"
                    android:angle="-45" />
                <corners android:radius="50dp"/>
            </shape>
        </clip>
    </item>
</layer-list>